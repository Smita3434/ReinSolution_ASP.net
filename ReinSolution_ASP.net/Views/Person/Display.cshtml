
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Display</title>
    </head>
<body>
    <table class="table table-bordered table-hover">
        <tr>
            <td> Your Name</td>
            <td> @ViewBag.Name</td>
        </tr>

        <tr>
            <td> Gender</td>
            <td> @ViewBag.Gender</td>
        </tr>

        <tr>
            <td> Hobbies</td>
            <td>
                @foreach (string s in ViewBag.Hobbies)
                {
                    <p>
                        @s
                    </p>
                }
            </td>
        </tr>
        <tr>
            <td>Survey </td>
            <td> @ViewBag.Option</td>
        </tr>
    </table>


</body>
</html>
