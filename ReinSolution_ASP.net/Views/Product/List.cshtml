
@{
        ViewData["Title"] = "List";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
    
</head>
<body>
    <h1>Product List</h1>
    <p>  @Html.ActionLink("Add Product", "Create", "Product")</p>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
        @foreach (Product prod in ViewBag.Productlist)
        {
            <tr>
                <td>@prod.Id</td>
                <td>@prod.Name</td>
                <td>@prod.Price</td>
            </tr>
        }
    </table>
</body>
</html>
